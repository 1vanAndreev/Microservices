{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Debug"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "users-route": {
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/users/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "posts-route": {
        "ClusterId": "posts-cluster",
        "Match": {
          "Path": "/posts/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "delivery-route": {
  "ClusterId": "delivery-cluster",
  "Match": { "Path": "/delivery/{**catch-all}" },
  "Transforms": [ { "PathPattern": "{**catch-all}" } ]
}
    },
    "Clusters": {
      "users-cluster": {
        "Destinations": {
          "d1": {
            "Address": "http://users-service:80"
          }
        }
      },
      "posts-cluster": {
        "Destinations": {
          "d1": {
            "Address": "http://posts-service:80"
          }
        }
      },
      "delivery-cluster": {
  "Destinations": {
    "d1": { 
             "Address": "http://delivery-service:80" 
          }
        }
      }
    }
  }
}
